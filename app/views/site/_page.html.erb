<%
  # AIRFIELD
  # Page Partial -- Render a page in archive/list view

  # Preset the hide_title toggle:
  hide_title ||= false
-%>

<%= content_container page, :tag=>"article", :html=>{id:"page-#{page.id}", class:"page editable"} do %>
  <% unless hide_title %>
    <%= content_attribute(page, :name, :tag=>"h1", :html=>{class:"field"}) %>
  <% end %>

  <%= content_attribute(page, :matter, :html=>{class:"field"}) do %>
    <%= render_markdown render_axtags(page.matter) %>
  <% end %>

<% end # content_container %>
