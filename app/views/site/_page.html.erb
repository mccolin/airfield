<%
  # AIRFIELD
  # Page Partial -- Render a page in archive/list view

  # Preset the hide_title toggle:
  hide_title ||= false
-%>

<article id="page-<%=page.id%>" class="page">
  <% unless hide_title %>
    <h1 class="editable" data-content-type="page" data-content-id="<%=page.id-%>" data-content-key="name"><%= page.name %></h1>
  <% end %>

  <%= render_content_in_layout(page.layout, page) %>

</article>

