<%
  # AIRFIELD
  # Admin / Page Form
-%>

<%= semantic_form_for [:admin, @page] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :hint=>"The displayed headline/title of the page" %>
    <%= f.input :author %>
    <%= f.input :format, :as=>:select, :collection=>%w(html markdown) %>
    <%= f.input :content, :input_html=>{:class=>"markdown"} %>
  <% end # f.inputs %>
  <%= f.actions do %>
    <%= f.action :submit, :label=>"Save Page" %>
    <%= f.action :cancel, :as=>:link, :label=>"Cancel" %>
  <% end # f.actions %>
<% end %>

