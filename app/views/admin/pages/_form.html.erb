<%
  # AIRFIELD
  # Admin / Page Form
-%>

<%= semantic_form_for [:admin, @page] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :hint=>"The displayed headline/title of the page" %>
    <%= f.input :parent, :hint=>"This page's parent page in navigation and site map (select none for top-level pages)" %>
    <%= f.input :author, :hint=>"The author of record for this page" %>
    <%= f.input :format, :as=>:select, :collection=>%w(html markdown), :hint=>"Airfield will support embedded HTML or Markdown formats" %>

    <% # f.input :content, :input_html=>{:class=>"markdown"} %>

    <% @page.content.each do |key, value| %>
      <%= f.input "content", :input_html=>{
              :id=>"#{f.object.class.to_s.downcase}_content_#{key}",
              :name=>"#{f.object.class.to_s.downcase}[content][#{key}]",
              :value=>value,
              :class=>"markdown"},
            :label=>key.capitalize,
            :hint=>"Provide content for the #{key} content region." %>
    <% end %>


    <%= f.input :layout, :input_html=>{:class=>"markdown"} %>
  <% end # f.inputs %>
  <%= f.actions do %>
    <%= f.action :submit, :label=>"Save Page" %>
    <%= f.action :cancel, :as=>:link, :label=>"Cancel" %>
  <% end # f.actions %>
<% end %>

