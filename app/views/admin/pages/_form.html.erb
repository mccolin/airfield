<%
  # AIRFIELD
  # Admin / Page Form
-%>

<%= semantic_form_for [:admin, @page] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :hint=>"The displayed headline/title of the page" %>
    <%= f.input :matter, :input_html=>{class:"markdown"}, :label=>"Body", :hint=>"Body content for this page" %>

    <hr/>

    <%= f.input :author, :selected=>(@page.author_id || current_user.id), :hint=>"The author of record for this page" %>
    <%= f.input :parent, :hint=>"This page's parent page in navigation and site map (select none for top-level pages)" %>
    <%= f.input :site, :selected=>(@page.site_id || Site.instance.id), :hint=>"The site to which this page is assigned." %>
    <%= f.input :format, :as=>:select, :selected=>"markdown", :collection=>%w(html markdown), :hint=>"Airfield will support embedded HTML or Markdown formats" %>

    <%# PREVIOUS: f.input :layout, :input_html=>{:class=>"markdown"} %>
  <% end # f.inputs %>
  <%= f.actions do %>
    <%= f.action :submit, :label=>"Save Page" %>
    <%= f.action :cancel, :as=>:link, :label=>"Cancel" %>
  <% end # f.actions %>
<% end %>

